<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest>
        <RunAOTCompilation>true</RunAOTCompilation>
        <!--<BlazorCacheBootResources>false</BlazorCacheBootResources>-->
        <Nullable>disable</Nullable>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>

    <PropertyGroup>
        <OutputPath>$(BaseOutputPath)\Examples\Simple\WebAsm\</OutputPath>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.0-preview.5.21301.17" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.0-preview.5.21301.17" PrivateAssets="all" />
        <PackageReference Include="Microsoft.JSInterop.WebAssembly" Version="6.0.0-preview.5.21301.17" />


        <PackageReference Include="SixLabors.ImageSharp" Version="1.0.3" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="$(FuseeEngineRoot)\src\Base\Imp\WebAsm\Fusee.Base.Imp.WebAsm.csproj" />
        <ProjectReference Include="$(FuseeEngineRoot)\src\Engine\Imp\Graphics\WebAsm\Fusee.Engine.Imp.Graphics.WebAsm.csproj" />
        <ProjectReference Include="..\..\Core\Fusee.Examples.Simple.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
        <ServiceWorker Include="wwwroot\service-worker.js" PublishedContent="wwwroot\service-worker.published.js" />
    </ItemGroup>

    <Target Name="MovingAssetsToServerRoot" BeforeTargets="PostBuildEvent">
        <ItemGroup>
            <AssetsDir Include="$(BaseOutputPath)\Examples\Simple\WebAsm\$(TargetFramework)\Assets\**\*.*" />
        </ItemGroup>
        <Message Text="Moving 'Assets' folder to http server root folder" Importance="high" />
        <Move SourceFiles="@(AssetsDir)" DestinationFolder="$(BaseOutputPath)\Examples\Simple\WebAsm\$(TargetFramework)\wwwroot\Assets\%(RecursiveDir)" />
        <RemoveDir Directories="$(BaseOutputPath)\Examples\Simple\WebAsm\$(TargetFramework)\Assets" />
    </Target>

</Project>
